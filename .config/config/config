set $mod mod4
set $alt mod1

font pango:Roboto 8

## espresso dark color scheme
#set $background #ffffff
set $background #2f343f
set $foreground #efefef
set $black      #5b4848
set $red	    #cb6077
set $green		#bec55b
set $yellow		#e4bc87
set $blue		#8ab3d5
set $magenta    #a89bb9
set $cyan	    #7bcdb4
set $white	    #aaaaaa

## set workspaces
set $ws1  "1: 1"
set $ws2  "2: 2"
set $ws3  "3: 3"
set $ws4  "4: 4"
set $ws5  "5: 5"
